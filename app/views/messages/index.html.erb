<% if user_signed_in? %>
	<% @messages.each do |message| %>
		<div class="col-md-8">
			<div class="message">
				<h2 class="message-title"><%= message.title %></h2>
				<p class="message-posted-by">Posted by <%= message.user.email %> <%= time_ago_in_words(message.created_at) %> ago</p>
				<p class="message-description"><%= message.description %></p>
				<% if message.user_id == current_user.id %>
					<div class="links">
						<%= link_to "Edit", edit_message_path(message) %>
						<%= link_to "Delete", message_path(message), method: :delete, data: { confirm: "Are you sure?" } %>
					</div>
				<% end %>
				<hr />
				<div style="color:white;"><%= render message.comments %></div>
				<br />
				<%= link_to image_tag("white.png", :width => "30px"), message %>
			</div>
		</div>
	<% end %>
<% else %>
	<h3>Please log in to view the discussion.</h3>
<% end %>