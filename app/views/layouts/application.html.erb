<!DOCTYPE html>
<html>
<head>
  <title>ChatBoard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

	<nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header">
				<%= link_to "ChatBoard", root_path, class: "navbar-brand" %>
			</div>
			<ul class="navbar-nav nav">
				<% if user_signed_in? %>
					<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
					<li><a href="/ideas">Ideas</a></li>
					<li><a href="/projects">Projects</a></li>
					<li><a href="/categories">Categories</a></li>
				<% else %>
					<li><%= link_to "Sign Up", new_user_registration_path %></li>
					<li><%= link_to "Log In", new_user_session_path %></li>
				<% end %>
			</ul>
			<% if user_signed_in? %>
				<p><%= link_to image_tag("plus.png", :alt => "add new", :width => "50px", :class => "navbar-link navbar-right"), new_message_path %></p>
			<% end %>
		</div>
	</nav>

	<div class="container">
		<p class="notice bg-info"><%= notice %></p>
		<p class="alert"><%= alert %></p>
		<%= yield %>
	</div>
	
<script>
  	data = <%= raw User.pluck(:username).compact.to_json %>;
	$('textarea').atwho({at:"@", 'data':data});
  </script>
</body>
</html>
